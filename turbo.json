{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": { "outputs": [] },
    "lint:fix": { "outputs": [] },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "//#emulators": {
      "cache": false,
      "interactive": true
    },
    "dev": {
      "dependsOn": ["//#emulators"],
      "cache": false,
      "persistent": true,
      "interactive": true
    }
  }
}
