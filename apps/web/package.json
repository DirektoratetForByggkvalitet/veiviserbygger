{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "predev": "npm run build:embed && cp dist/embed* public/",
    "build": "npm run build:base && npm run build:embed",
    "build:base": "vite build --mode production",
    "build:embed": "BUILD_TARGET=embed npm run build:base",
    "start": "echo \"Serve properly with either vercel or an nginx server\"",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watchAll",
    "lint": "eslint . && prettier . --check",
    "lint:fix": "prettier . --write"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "@tiptap/extension-list-item": "^2.9.1",
    "@tiptap/extension-subscript": "^2.11.5",
    "@tiptap/extension-superscript": "^2.11.5",
    "@tiptap/extension-text-style": "^2.9.1",
    "@tiptap/pm": "^2.9.1",
    "@tiptap/react": "^2.9.1",
    "@tiptap/starter-kit": "^2.9.1",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.7.7",
    "buffer": "^6.0.3",
    "firebase": "^11.0.1",
    "jotai": "^2.10.1",
    "lodash": "^4.17.21",
    "losen": "*",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-redux": "^9.2.0",
    "react-router": "^6.27.0",
    "react-router-dom": "^6.27.0",
    "react-transition-group": "^4.4.5",
    "react-use-draggable-scroll": "^0.4.7",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "shared": "*",
    "swr": "^2.3.3",
    "types": "*",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet": "^6.1.11",
    "@types/react-transition-group": "^4.4.11",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint-config-custom": "*",
    "jest": "^29.7.0",
    "sass": "^1.80.2",
    "ts-jest": "^29.2.5",
    "typescript": "^4.6.2",
    "vite": "^5.4.9"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "json",
      "json-summary",
      "lcov",
      [
        "text",
        {
          "file": "coverage.txt"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  }
}
