{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --platform=node --sourcemap --outdir=build --loader:.node=file",
    "watch": "npm run build -- --watch=forever",
    "start": "node build/index.js",
    "dev": "npm run watch & nodemon --watch build --exec npm start",
    "lint": "eslint . && prettier . --check",
    "test": "dotenv -e ../../.env -c ci jest -- --coverage --forceExit",
    "test:clear-cache": "jest --clearCache",
    "test:watch": "npm run test -- --watch --coverage=false"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "losen": "*",
    "types": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@types/body-parser": "^1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.8.6",
    "esbuild": "^0.24.0",
    "eslint-config-custom": "*",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "typescript": "^4.6.2"
  },
  "author": "",
  "license": "ISC",
  "description": ""
}
